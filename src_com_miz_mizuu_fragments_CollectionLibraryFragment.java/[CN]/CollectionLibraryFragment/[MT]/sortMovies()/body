{
  String SORT_TYPE=settings.getString("prefsSorting","sortTitle");
  if (SORT_TYPE.equals("sortTitle")) {
    sortByTitle();
  }
 else   if (SORT_TYPE.equals("sortRelease")) {
    sortByRelease();
  }
 else   if (SORT_TYPE.equals("sortRating")) {
    sortByRating();
  }
 else   if (SORT_TYPE.equals("sortAdded")) {
    sortByDateAdded();
  }
}
