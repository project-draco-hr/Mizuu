{
  if (isAdded()) {
    AppWidgetManager awm=AppWidgetManager.getInstance(getActivity());
    awm.notifyAppWidgetViewDataChanged(awm.getAppWidgetIds(new ComponentName(getActivity(),MovieStackWidgetProvider.class)),R.id.stack_view);
    awm.notifyAppWidgetViewDataChanged(awm.getAppWidgetIds(new ComponentName(getActivity(),MovieCoverWidgetProvider.class)),R.id.widget_grid);
  }
}
