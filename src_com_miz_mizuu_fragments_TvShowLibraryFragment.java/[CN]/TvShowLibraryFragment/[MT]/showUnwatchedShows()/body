{
  shownShows.clear();
  new AsyncTask<Void,Void,Void>(){
    ArrayList<TvShow> tempShows=new ArrayList<TvShow>();
    @Override protected void onPreExecute(){
      showProgressBar();
    }
    @Override protected Void doInBackground(    Void... params){
      DbAdapterTvShowEpisode db=MizuuApplication.getTvEpisodeDbAdapter();
      for (int i=0; i < shows.size(); i++)       if (db.hasUnwatchedEpisodes(shows.get(i).getId()))       tempShows.add(shows.get(i));
      return null;
    }
    @Override protected void onPostExecute(    Void result){
      shownShows.addAll(tempShows);
      tempShows.clear();
      tempShows=null;
      sortShows();
      notifyDataSetChanged();
      hideProgressBar();
    }
  }
.execute();
}
