{
  if (key.equals("prefsIgnorePrefixesInTitles")) {
    ignorePrefixes=settings.getBoolean("prefsIgnorePrefixesInTitles",false);
    forceLoaderLoad();
  }
 else   if (key.equals("prefsGridItemSize")) {
    String thumbnailSize=settings.getString("prefsGridItemSize",getString(R.string.normal));
    if (thumbnailSize.equals(getString(R.string.large)))     mImageThumbSize=(int)(getResources().getDimensionPixelSize(R.dimen.image_thumbnail_size) * 1.25);
 else     if (thumbnailSize.equals(getString(R.string.normal)))     mImageThumbSize=(int)(getResources().getDimensionPixelSize(R.dimen.image_thumbnail_size) * 1);
 else     mImageThumbSize=(int)(getResources().getDimensionPixelSize(R.dimen.image_thumbnail_size) * 0.75);
    mGridView.setColumnWidth(mImageThumbSize);
    final int numColumns=(int)Math.floor(mGridView.getWidth() / (mImageThumbSize + mImageThumbSpacing));
    if (numColumns > 0) {
      final int columnWidth=(mGridView.getWidth() / numColumns) - mImageThumbSpacing;
      mAdapter.setNumColumns(numColumns);
      mAdapter.setItemHeight(columnWidth);
    }
  }
  showGridTitles=settings.getBoolean("prefsShowGridTitles",false);
  sortShows();
  notifyDataSetChanged();
}
