{
  DbAdapterTvShowEpisode dbHelper=MizuuApplication.getTvEpisodeDbAdapter();
  if (isUpdate || isShowIdentify || rowsToDrop != null) {
    dbHelper.createEpisode(filepath,MizLib.addIndexZero(ep.getSeason()),MizLib.addIndexZero(ep.getEpisode()),thisShow.getId(),ep.getTitle(),ep.getDescription(),ep.getAirdate(),ep.getRating(),ep.getDirector(),ep.getWriter(),ep.getGueststars(),"0","0");
  }
 else {
    dbHelper.updateEpisode(rowId,filepath,MizLib.addIndexZero(ep.getSeason()),MizLib.addIndexZero(ep.getEpisode()),thisShow.getId(),ep.getTitle(),ep.getDescription(),ep.getAirdate(),ep.getRating(),ep.getDirector(),ep.getWriter(),ep.getGueststars(),"0","0");
  }
  updateNotification(ep);
}
