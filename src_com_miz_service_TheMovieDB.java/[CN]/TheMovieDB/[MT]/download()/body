{
  String thumb_filepath=new File(thumbsFolder,movie.getId() + ".jpg").getAbsolutePath();
  if (!MizLib.downloadFile(movie.getCover(),thumb_filepath))   MizLib.downloadFile(movie.getCover(),thumb_filepath);
  if (!movie.getBackdrop().equals("NOIMG")) {
    String backdropFile=new File(MizLib.getMovieBackdropFolder(this),movie.getId() + "_bg.jpg").getAbsolutePath();
    if (!MizLib.downloadFile(movie.getBackdrop(),backdropFile))     MizLib.downloadFile(movie.getBackdrop(),backdropFile);
  }
  if (!movie.getCollectionImage().isEmpty()) {
    String collectionImage=new File(thumbsFolder,movie.getCollectionId() + ".jpg").getAbsolutePath();
    if (!MizLib.downloadFile(movie.getCollectionImage(),collectionImage))     MizLib.downloadFile(movie.getCollectionImage(),collectionImage);
  }
  addToDatabase();
}
