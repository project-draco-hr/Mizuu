{
  if (!(!MizLib.runsInPortraitMode(getActivity()) && MizLib.runsOnTablet(getActivity())) && isVisible())   inflater.inflate(R.menu.episode_details,menu);
  try {
    if (thisEpisode.hasWatched()) {
      menu.findItem(R.id.watched).setTitle(R.string.stringMarkAsUnwatched);
    }
 else {
      menu.findItem(R.id.watched).setTitle(R.string.stringMarkAsWatched);
    }
    if (thisEpisode.isNetworkFile()) {
      menu.findItem(R.id.watchOffline).setVisible(true);
      if (thisEpisode.hasOfflineCopy())       menu.findItem(R.id.watchOffline).setTitle(R.string.removeOfflineCopy);
 else       menu.findItem(R.id.watchOffline).setTitle(R.string.watchOffline);
    }
  }
 catch (  Exception e) {
  }
}
