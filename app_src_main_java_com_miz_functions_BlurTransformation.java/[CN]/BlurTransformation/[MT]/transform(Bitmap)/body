{
  Bitmap blur;
  if (PreferenceManager.getDefaultSharedPreferences(mContext).getBoolean(PreferenceKeys.USE_FAST_BLUR,true))   blur=MizLib.fastBlur(mContext,Bitmap.createScaledBitmap(source,source.getWidth() / 2,source.getHeight() / 2,false),mBlurRadius);
 else   blur=MizLib.slowBlur(Bitmap.createScaledBitmap(source,source.getWidth() / 2,source.getHeight() / 2,false),mBlurRadius);
  source.recycle();
  return blur;
}
