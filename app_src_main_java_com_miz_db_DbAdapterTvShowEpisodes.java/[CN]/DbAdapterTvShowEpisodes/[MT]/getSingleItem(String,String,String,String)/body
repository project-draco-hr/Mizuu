{
  String singleItem="";
  Cursor c=mDatabase.query(DATABASE_TABLE,new String[]{column},KEY_SHOW_ID + " = ? AND " + KEY_SEASON+ " = ? AND "+ KEY_EPISODE+ " = ?",new String[]{showId,season,episode},null,null,null);
  if (c != null) {
    try {
      if (c.moveToFirst())       singleItem=c.getString(c.getColumnIndex(column));
    }
 catch (    SQLException e) {
    }
 finally {
      c.close();
    }
  }
  return singleItem;
}
