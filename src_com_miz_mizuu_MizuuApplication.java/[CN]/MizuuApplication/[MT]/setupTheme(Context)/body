{
  if (usesDarkTheme(context)) {
    if (isFullscreen(context))     context.setTheme(R.style.Theme_Example_FullScreen);
 else     context.setTheme(R.style.Theme_Example);
  }
 else {
    if (isFullscreen(context))     context.setTheme(R.style.Theme_Example_Light_FullScreen);
 else     context.setTheme(R.style.Theme_Example_Light);
  }
}
