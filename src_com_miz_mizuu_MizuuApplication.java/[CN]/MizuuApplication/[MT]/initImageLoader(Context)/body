{
  if (!(0 != (context.getApplicationInfo().flags&=ApplicationInfo.FLAG_DEBUGGABLE)))   L.disableLogging();
  ImageLoaderConfiguration config=new ImageLoaderConfiguration.Builder(context).threadPoolSize(2).threadPriority(Thread.NORM_PRIORITY - 1).denyCacheImageMultipleSizesInMemory().discCacheSize(100 * 1024 * 1024).discCacheFileCount(200).imageDownloader(new CifsImageDownloader(context)).discCacheFileNameGenerator(new Md5FileNameGenerator()).tasksProcessingOrder(QueueProcessingType.FIFO).build();
  ImageLoader.getInstance().init(config);
}
