{
  if (useWildcard)   return "video/*";
  String type=null;
  String extension=MimeTypeMap.getFileExtensionFromUrl(url);
  if (extension != null) {
    if (useCorrectMkvMimeType && url.contains(".mkv"))     return "video/x-matroska";
    MimeTypeMap mime=MimeTypeMap.getSingleton();
    type=mime.getMimeTypeFromExtension(extension);
    if (isEmpty(type))     type="video/*";
  }
  return type;
}
