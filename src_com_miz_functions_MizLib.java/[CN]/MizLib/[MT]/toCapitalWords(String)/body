{
  if (s == null)   return s;
 else {
    if (!s.isEmpty()) {
      String result="";
      String[] split=s.split("\\s");
      int count=split.length;
      for (int i=0; i < count; i++)       result+=toCapitalFirstChar(split[i]) + " ";
      if (result.endsWith(" "))       result=result.substring(0,result.length() - 1);
      return result;
    }
 else     return s;
  }
}
