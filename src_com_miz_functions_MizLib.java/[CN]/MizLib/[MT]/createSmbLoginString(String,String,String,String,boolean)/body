{
  StringBuilder sb=new StringBuilder();
  sb.append("smb://");
  if (!user.isEmpty()) {
    if (!domain.isEmpty())     sb.append(domain + ";");
    sb.append(user);
    if (!password.isEmpty())     sb.append(":" + password);
    sb.append("@");
  }
  sb.append(server.replace("smb://",""));
  if (isFolder)   if (!server.endsWith("/"))   sb.append("/");
  return sb.toString();
}
