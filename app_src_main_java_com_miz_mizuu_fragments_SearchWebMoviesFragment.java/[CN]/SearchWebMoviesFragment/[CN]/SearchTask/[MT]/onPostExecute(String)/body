{
  if (!isAdded() || result == null)   return;
  hideProgressBar();
  if (mSearchField.getText().toString().length() > 0) {
    if (mListView.getAdapter() == null) {
      mAdapter=new ListAdapter(getActivity());
      mListView.setAdapter(mAdapter);
    }
 else {
      mAdapter.notifyDataSetChanged();
    }
  }
}
