{
  smb=s;
  isSmb=true;
  try {
    length=smb.length();
  }
 catch (  SmbException e) {
    length=0;
  }
  try {
    exists=smb.exists();
  }
 catch (  SmbException e) {
    exists=false;
  }
  try {
    list=smb.list();
  }
 catch (  SmbException e) {
    list=new String[]{};
  }
  absolutePath=smb.getCanonicalPath();
  try {
    name=smb.getName();
  }
 catch (  Exception e) {
    name="smb://";
  }
  parent=s.getParent();
}
