{
  File backdropFile=MizLib.getMovieBackdrop(mContext,movie.getId());
  if (!backdropFile.exists())   backdropFile=MizLib.getMovieThumb(mContext,movie.getId());
  if (mCallback != null) {
    try {
      mCallback.onMovieAdded(movie.getTitle(),mPicasso.load(MizLib.getMovieThumb(mContext,movie.getId())).resize(getNotificationImageSizeSmall(),(int)(getNotificationImageSizeSmall() * 1.5)).get(),mPicasso.load(backdropFile).resize(getNotificationImageWidth(),getNotificationImageHeight()).skipMemoryCache().get(),mCount);
    }
 catch (    Exception e) {
      mCallback.onMovieAdded(movie.getTitle(),null,null,mCount);
    }
  }
  LocalBroadcastUtils.updateMovieLibrary(mContext);
  WidgetUtils.updateMovieWidgets(mContext);
}
