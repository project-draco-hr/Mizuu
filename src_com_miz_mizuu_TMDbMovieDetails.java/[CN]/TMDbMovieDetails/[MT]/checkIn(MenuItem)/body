{
  new AsyncTask<Void,Void,Boolean>(){
    @Override protected Boolean doInBackground(    Void... params){
      return Trakt.performMovieCheckin(mMovieId,getApplicationContext());
    }
    @Override protected void onPostExecute(    Boolean result){
      if (result)       Toast.makeText(getApplicationContext(),getString(R.string.checked_in),Toast.LENGTH_SHORT).show();
 else       Toast.makeText(getApplicationContext(),getString(R.string.errorSomethingWentWrong),Toast.LENGTH_SHORT).show();
    }
  }
.execute();
}
