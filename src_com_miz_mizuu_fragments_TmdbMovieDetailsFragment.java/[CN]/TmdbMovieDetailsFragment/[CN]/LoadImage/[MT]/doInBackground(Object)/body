{
  try {
    String uri=(String)params[0];
    type=(Integer)params[1];
    if (type == COVER) {
      if (mCover == null)       mCover=BitmapFactory.decodeStream(new URL(uri).openConnection().getInputStream());
    }
 else {
      if (mBackdrop == null)       mBackdrop=BitmapFactory.decodeStream(new URL(uri).openConnection().getInputStream());
    }
    if (type == COVER)     if (mCover == null)     setupNullImages();
  }
 catch (  Exception e) {
    setupNullImages();
  }
  return null;
}
