{
  super.onCreate(savedInstanceState);
  if (isFullscreen())   setTheme(R.style.Mizuu_Theme_Transparent_NoBackGround_FullScreen);
 else   setTheme(R.style.Mizuu_Theme_NoBackGround_Transparent);
  if (MizLib.isPortrait(this))   getWindow().setBackgroundDrawableResource(R.drawable.bg);
  getWindow().requestFeature(Window.FEATURE_ACTION_BAR_OVERLAY);
  setTitle(null);
  String actorId=getIntent().getExtras().getString("actorID");
  Fragment frag=getSupportFragmentManager().findFragmentByTag(TAG);
  if (frag == null && savedInstanceState == null) {
    final FragmentTransaction ft=getSupportFragmentManager().beginTransaction();
    ft.replace(android.R.id.content,ActorDetailsFragment.newInstance(actorId),TAG);
    ft.commit();
  }
}
