{
  super.onCreate(savedInstanceState);
  Fragment frag=getSupportFragmentManager().findFragmentByTag(TAG);
  if (frag == null) {
    final FragmentTransaction ft=getSupportFragmentManager().beginTransaction();
    ft.add(android.R.id.content,NetworkBrowserFragment.newInstance(getIntent().getExtras().getString("server"),getIntent().getExtras().getString("user"),getIntent().getExtras().getString("pass"),getIntent().getExtras().getString("domain"),getIntent().getExtras().getBoolean("isMovie")),TAG);
    ft.commit();
  }
}
