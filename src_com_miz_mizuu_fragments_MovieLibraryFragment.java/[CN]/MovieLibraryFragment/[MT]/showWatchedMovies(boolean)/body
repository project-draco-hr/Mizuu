{
  showProgressBar();
  shownMovies.clear();
  for (int i=0; i < movies.size(); i++) {
    if (watched) {
      if (movies.get(i).hasWatched())       shownMovies.add(movies.get(i));
    }
 else {
      if (!movies.get(i).hasWatched())       shownMovies.add(movies.get(i));
    }
  }
  sortMovies();
  notifyDataSetChanged();
  hideProgressBar();
}
