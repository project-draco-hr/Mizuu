{
  if (!MizLib.isPortrait(context)) {
    newAlpha=0;
    setBackground=true;
    showActionBar=true;
  }
 else {
    if (!MizLib.isTablet(context) && !MizLib.usesNavigationControl(context)) {
      if (newAlpha == 0) {
        actionBar.hide();
      }
 else       actionBar.show();
    }
  }
  actionBar.setTitle(newAlpha > 127 ? title : null);
  if (showActionBar) {
    actionBar.show();
  }
}
