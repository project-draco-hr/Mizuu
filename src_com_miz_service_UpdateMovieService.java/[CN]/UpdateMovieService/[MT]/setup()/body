{
  storageDirectories=new ArrayList<FileSource>();
  DbAdapterSources dbHelperSources=MizuuApplication.getSourcesAdapter();
  Cursor c=dbHelperSources.fetchAllMovieSources();
  while (c.moveToNext()) {
    storageDirectories.add(new FileSource(c.getLong(c.getColumnIndex(DbAdapterSources.KEY_ROWID)),c.getString(c.getColumnIndex(DbAdapterSources.KEY_FILEPATH)),c.getInt(c.getColumnIndex(DbAdapterSources.KEY_IS_SMB)),c.getString(c.getColumnIndex(DbAdapterSources.KEY_USER)),c.getString(c.getColumnIndex(DbAdapterSources.KEY_PASSWORD)),c.getString(c.getColumnIndex(DbAdapterSources.KEY_DOMAIN)),c.getString(c.getColumnIndex(DbAdapterSources.KEY_TYPE))));
  }
  c.close();
}
