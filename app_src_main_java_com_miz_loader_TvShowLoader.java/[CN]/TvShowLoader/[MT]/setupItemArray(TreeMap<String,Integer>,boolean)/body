{
  final CharSequence[] tempArray=map.keySet().toArray(new CharSequence[map.keySet().size()]);
  for (int i=0; i < tempArray.length; i++)   tempArray[i]=tempArray[i] + " (" + map.get(tempArray[i])+ (addFilesPostfix ? " " + mContext.getResources().getQuantityString(R.plurals.files,map.get(tempArray[i])) + ")" : ")");
  return tempArray;
}
