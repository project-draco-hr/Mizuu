{
  if (!isFromManualIdentify) {
    File backdropFile=MizLib.getMovieBackdrop(context,movie.getId());
    if (!backdropFile.exists())     backdropFile=MizLib.getMovieThumb(context,movie.getId());
    if (callback != null)     callback.onMovieAdded(movie.getTitle(),MizLib.getMovieThumb(context,movie.getId()).getAbsolutePath(),backdropFile.getAbsolutePath());
  }
 else {
    sendUpdateBroadcast(new Intent("mizuu-movies-identification"));
    sendUpdateBroadcast(new Intent("mizuu-library-change"));
    updateWidgets();
  }
}
